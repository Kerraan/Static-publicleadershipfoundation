<section class="grid-container grid-container--cards-a">
  <div class="g-card bg-pink c-story">
    <div class="card-content flex">
      <h3>
        <a class="link-white fs-500 text-white txt-dec-none" href="{{ story.url }}">{{story.data.title}}</a>
      </h3>
      <p class="fs-300 txt-align-left text-white">
        {{story.data.description}}
      </p>
      <a class="link-white flex-end text-white fs-500" href="{{ story.url }}">More...</a>
    </div>
  </div>
  <picture class="c-story-picture">
    <source srcset="{{ story.data.image }}" type="image/webp"/>
    <source srcset="{{ story.data.image }}" type="image/jpeg"/>
    <img src="{{ story.data.image }}" alt="{{ story.data.imageAlt }}"/>
  </picture>
</section>